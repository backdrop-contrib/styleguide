/**
 * Implements hook_menu().
 */
function styleguide_menu() {
  $items = array();
  $items['admin/appearance/styleguide'] = array(
    'title' => 'Style guide',
    'page callback' => 'styleguide_page',
    'type' => MENU_LOCAL_TASK,
    'weight' => 40,
    'access arguments' => array('view style guides'),
  );
  foreach (list_themes() as $theme) {
    $items['admin/appearance/styleguide/' . $theme->name] = array(
      'title' => $theme->info['name'],
      'page callback' => 'styleguide_page',
      'page arguments' => array($theme->name),
      'type' => ($theme->name == variable_get('theme_default', 'bartik')) ? MENU_DEFAULT_LOCAL_TASK : MENU_LOCAL_TASK,
      'access callback' => 'styleguide_access_check',
      'access arguments' => array($theme),
      'weight' => ($theme->name == variable_get('theme_default', 'bartik')) ? -10 : 0,
    );
  }
  return $items;
}

/**
 * Implements hook_permission().
 */
function styleguide_permission() {
  $permissions = array(
    'view style guides' => array(
      'title' => t('View theme style guides'),
    )
  );
  return $permissions;
}

/**
 * Menu access callback.
 */
function styleguide_access_check($theme) {
  if (!user_access('view style guides')) {
    return FALSE;
  }
  if (drupal_theme_access($theme)) {
    return TRUE;
  }
  return FALSE;
}

/**
 * The styleguide page.
 */
function styleguide_page($theme = NULL) {
  if (is_null($theme)) {
    $theme = variable_get('theme_default', 'bartik');
  }
  $themes = list_themes();
  $active = $themes[$theme];
  $items = module_invoke_all('styleguide');
  drupal_alter('styleguide', $items);
  $header = array();
  $intro = '<h2>' . t('Showing style guide for %theme', array('%theme' => $active->info['name'])) . '</h2>';
  $output = '<div class="styleguide-spacer"><br /></div>';
  foreach ($items as $key => $item) {
    $header[] = l($item['title'], $_GET['q'], array('fragment' => $key));
    $output .= "<a name=\"$key\"></a>";
    $output .= '<h2>--'. t($item['title']) .'--</h2>';
    if (isset($item['theme'])) {
      $output .= theme($item['theme'], $item['arguments']);
    }
    else if (isset($item['tag']) && isset($item['content'])) {
      $output .= '<' . $item['tag'] . '>' . $item['content'] . '</' . $item['tag'] . '>';
    }
    else if (isset($item['content'])) {
      $output .= $item['content'];
    }
    $output .= '<div class="styleguide-spacer"><br /></div>';
  }
  return $intro . theme('item_list', array('items' => $header, 'title' => t('Elements'))) . $output;
}

/**
 * Implements hook_custom_theme().
 */
function styleguide_custom_theme() {
  // Allow the admin theme and other custom themes to be retained.
  $item = menu_get_item();
  if ($item['page_callback'] != 'styleguide_page') {
    return;
  }
  if (!empty($item['page_arguments'])) {
    return current($item['page_arguments']);
  }
  else {
    return variable_get('theme_default', 'bartik');
  }
}

/**
 * Implements hook_hook_info().
 */
function styleguide_hook_info() {
  $hooks['styleguide'] = array(
    'group' =>  'styleguide',
  );
  return $hooks;
}

/**
 * Return a simple array of words.
 *
 * @param $size
 *   The size of the list to return.
 * @return
 *   An array of words.
 */
function styleguide_list($size = 5) {
  $items = array();
  for ($i = 0; $i < $size; $i++) {
    $items[] = styleguide_word();
  }
  return $items;
}

/**
 * Return a random word.
 */
function styleguide_word() {
  return styleguide_lorem(1, 1, 'lower', FALSE, FALSE);
}

/**
 * Return a random table header array.
 *
 * @param $size
 *   The size of the list to return.
 * @return
 *   An array of header elements.
 */
function styleguide_header($size = 5) {
  $header = styleguide_list($size);
  return $header;
}

/**
 * Return a random table row array.
 *
 * @param $size
 *   The size of the list to return.
 * @return
 *   An array of row elements.
 */
function styleguide_rows($size = 5) {
  $rows = array();
  for ($i = 0; $i < $size; $i++) {
    $rows[] = styleguide_list($size);
  }
  return $rows;
}

